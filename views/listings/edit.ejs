<% layout("/layouts/bolierplate") %>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h2> Edit Listings</h2>
    <form  method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" id="" cols="" rows="" class="form-control" value="<%=listing.description%>" ></textarea>
       </div>

       <div class="mb-3">
        <h4>Original Image</h4>
      <img src="<%= listing.image.url%>" class="card-img-top"  alt="image" style="width: 20rem;">
       </div>

       <div class="mb-3">
        <label for="image" class="form-label">UPLOAD NEW IMAGE</label>
        <input type="file" name="listing[image]"  class="form-control" value="<%=listing.image.url%>"  >
       </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control"  required>

        </div>

        <div class="mb-3">
            <label for="validationCustom04" class="form-label">Category</label>
            <select class="form-select" id="validationCustom04" name="listing[category]">
              <option selected disabled value="">Select a category</option>
              <option value="Rooms">Rooms</option>
              <option value="Iconic Cities">Iconic cities</option>
              <option value="Mountains">Mountains</option>
              <option value="Castles">Castles</option>
              <option value="Amazing pools">Amazing pools</option>
              <option value="Camping">Camping</option>
              <option value="Farms">Farms</option>
              <option value="SnowFall Areas">Arctic</option>
             
            </select>
            <div class="invalid-feedback">
              Please select a valid category.
            </div>
          </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control"  required>
        </div>
       
        <div class="mb-3">
            <label for="price" class="form-control">Price</label>
            <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control"  required>
        </div>
        
        <button class="btn btn-danger">Edit</button>
        <br> <br>
    </form>

</body>
</div>
</div>